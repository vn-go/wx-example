{
  //"extends": "./tsconfig.app.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "esnext",
    "composite": true,
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@app-layouts/*": [
        "src/app-layouts/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    }
  },
}